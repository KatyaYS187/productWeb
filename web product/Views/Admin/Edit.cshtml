@model web_product.Entities.Products

<h2>Редактирование товара</h2>
<form asp-action="edit" asp-controller="admin" asp-route-id="@Model.Id">
    
    <p>
        <label asp-for="Name">Имя</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Description">Описание</label><br />
        <input type="text" asp-for="Description" />
    </p>
    <p>
        <label asp-for="Price">Цена</label><br />
       <input type="text" asp-for="Price" name="Price" placeholder="Введите цену"/>
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>