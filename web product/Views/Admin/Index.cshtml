@model IEnumerable<web_product.Entities.Products>

<h2>Список товаров</h2>
<p><a asp-action="Create">Добавить товар</a></p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
  </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>
                <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id">Редактировать</a>
            </td>
            
        </tr>
    }
</table>